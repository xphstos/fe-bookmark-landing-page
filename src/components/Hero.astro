---
import { Image } from "astro:assets";
import ButtonOutline from "./ButtonOutline.astro";
import ButtonOutlineSecondary from "./ButtonOutlineSecondary.astro";
import Illustration from "@assets/illustration-hero.svg"

---

<section>
<header>
    <h1>
    A Simple Bookmark Manager
    </h1>
    <p>A clean and simple interface to organize your favourite websites. Open a new
    browser tab and see your sites load instantly. Try it for free.</p>
    <div>
        <ButtonOutline >
            Get it on Chrome
        </ButtonOutline>
        <ButtonOutlineSecondary >
              Get it on Firefox
        </ButtonOutlineSecondary>
    </div>
</header>
    <figure>
        <Image src={Illustration} alt="" >
    </figure>
</section>


<style>
    section {
        --container: 35rem;
        display: grid;
        gap: 3rem;
        padding-inline: max(
            var(--padding-inline),
            50% - (var(--container) / 2)
        );
        color: hsl(var(--very-dark-blue));
        padding-block: 4rem;

        @media (width > 1120px) {
            --container: 70rem;
            grid-template-columns: 1fr 36rem;
            place-items: center;
            padding-block: 4rem 2rem;
        }

        @media (width > 1200px) {
            grid-template-columns: 30rem 1fr;
        }
    }

    header {
        text-align: center;

        @media (width > 1120px) {
            text-align: left;
        }
    }

    h1 {
        font-size: 1.5rem;
        line-height: 1.125;
        font-weight: 500;
        text-wrap: balance;

        @media (width > 1120px) {
            text-wrap: normal;
            font-size: 3rem;
        }
    }

    p {
        margin-block: 1rem;
        color: hsl(var(--grayish-blue));
        text-wrap: balance;

        @media (width > 1120px) {
            margin-block: 2rem;
        }
    }

    div {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;

        @media (width > 1120px) {
            justify-content: flex-start;
        }
    }

    figure {
        position: relative;
        isolation: isolate;
        order: -1;

        &::before {
            content: "";
            display: block;
            position: absolute;
            inset: auto auto 0 0;
            border-radius: 100vmax;
            inline-size: 150%;
            translate: 20% 0;
            block-size: 75%;
            z-index: -1;
            background: hsl(var(--soft-blue));
        }

        @media (width > 1120px) {
            order: 1;

            &::before {
                inline-size: 130%;
            }
        }
    }
</style>
