---
import { Image } from "astro:assets";
import ButtonPrimary from "./ButtonPrimary.astro";

interface Props {
  title: string;
  description: string;
  illustration: ImageMetadata
}

const {title, description, illustration} = Astro.props;
---

<article>
  <figure>
    <Image src={illustration} alt="" role="presentation" />
  </figure>
  <header>
    <h1>{title}</h1>
    <p>{description}</p>
    <ButtonPrimary>More info</ButtonPrimary>
  </header>
</article>


<style>
    article {
        --container: 35rem;
        display: grid;
        gap: 3rem;
        padding-inline: max(
            var(--padding-inline),
            50% - (var(--container) / 2)
        );
        color: hsl(var(--very-dark-blue));
        padding-block: 4rem;

        @media (width > 1120px) {
            --container: 74rem;
            grid-template-columns: 1fr 36rem;
            place-items: center;
            padding-block: 4rem 0;
            gap: 6rem;
        }

        @media (width > 1200px) {
            grid-template-columns: 30rem 1fr;
        }
    }

    header {
        text-align: center;

        @media (width > 1120px) {
            text-align: left;
        }
    }

    h1 {
        font-size: 1.25rem;
        line-height: 1.125;
        text-wrap: balance;

        @media (width > 1120px) {
            text-wrap: normal;
            font-size: 2rem;
        }
    }

    p {
        margin-block: 1rem;
        color: hsl(var(--grayish-blue));
        text-wrap: balance;

        @media (width > 1120px) {
            margin-block: 2rem;
        }
    }

    div {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;

        @media (width > 1120px) {
            justify-content: flex-start;
        }
    }

    figure {
        position: relative;
        isolation: isolate;
        padding-bottom: 2rem;

        &::before {
            content: "";
            display: block;
            position: absolute;
            inset: auto 0 0 auto;
            border-radius: 100vmax;
            inline-size: max(40vw, 150%);
            translate: -10% 0;
            block-size: 70%;
            z-index: -1;
            background: hsl(var(--soft-blue));
        }

        @media (width > 768px) {
          &::before {
            block-size: max(20vh, 70%);
          }
        }

        @media (width > 1120px) {
          padding-bottom: 5rem;

          &::before {
            inline-size: max(40vw, 150%);
          }
        }
    }
</style>
